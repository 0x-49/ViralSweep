<script>
  const billingToggle = document.getElementById('billing-toggle');
  const monthlyPricing = document.querySelectorAll('.pricing-monthly');
  const annualPricing = document.querySelectorAll('.pricing-annual');

  billingToggle!.addEventListener('change', function() {
    monthlyPricing.forEach(el => el.classList.toggle('hidden'));
    annualPricing.forEach(el => el.classList.toggle('hidden'));
  });
</script>

