---
// @ts-nocheck
const stats = [
  { number: "500K+", label: "Leads Generated" },
  { number: "10M+", label: "Contest Entries" },
  { number: "98%", label: "Client Satisfaction" }
];

const navigationLinks = [
  { icon: "✨", text: "Features", href: "#features" },
  { icon: "📊", text: "Case Studies", href: "#case-studies" },
  { icon: "💬", text: "Testimonials", href: "#testimonials" },
  { icon: "💰", text: "Pricing", href: "#pricing" },
  { icon: "❓", text: "FAQ", href: "#faq" }
];
---

<div class="relative bg-gradient-to-r from-purple-600 to-indigo-600 text-white overflow-hidden">
  <!-- Background Pattern -->  <div class="absolute inset-0 bg-grid-white/[0.05] bg-[length:16px_16px]"></div>
  
  <!-- Main Content -->
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 md:py-32">
    <div class="text-center lg:text-left grid lg:grid-cols-2 gap-12 items-center">
      <!-- Left Column: Text Content -->
      <div class="space-y-8">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-extrabold tracking-tight">
          <span class="block">ViralSweep Transforms Your</span>
          <span class="block text-transparent bg-clip-text bg-gradient-to-r from-yellow-400 to-pink-500">
            Marketing Strategy
          </span>
        </h1>
        
        <p class="text-xl md:text-2xl text-purple-100 max-w-3xl">
          Create viral contests, sweepstakes, and giveaways that drive massive engagement. Build your email list, boost social follows, and generate sales on autopilot.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
          <a
            href="https://viralsweep.com/?via=maxime-emmanuel"
            class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold rounded-lg bg-white text-purple-600 hover:bg-purple-50 transition-all duration-200 transform hover:scale-105"
          >
            Start Free Trial
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </a>
          <a
            href="#features"
            class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold rounded-lg border-2 border-purple-300 text-white hover:bg-white/10 transition-all duration-200"
          >
            See Features
          </a>
        </div>

        <!-- Stats Section -->
        <div class="grid grid-cols-3 gap-8 mt-12 text-center lg:text-left">
          {stats.map(stat => (
            <div>
              <p class="text-3xl md:text-4xl font-bold text-white">{stat.number}</p>
              <p class="text-purple-200 mt-1">{stat.label}</p>
            </div>
          ))}
        </div>
      </div>

      <!-- Right Column: Tech Illustration -->
      <div class="relative lg:block">
        <div class="relative rounded-lg bg-white/10 backdrop-blur-sm p-8 shadow-2xl">
          <div class="space-y-6">
            <!-- Campaign Preview -->
            <div class="bg-white rounded-lg p-4 shadow-lg transform hover:scale-105 transition-transform duration-200">
              <div class="flex items-center space-x-4 mb-4">
                <div class="w-12 h-12 bg-purple-600 rounded-full flex items-center justify-center">
                  <span class="text-2xl">🎉</span>
                </div>
                <div>
                  <h3 class="text-gray-900 font-semibold">Win Latest iPhone Pro!</h3>
                  <p class="text-gray-600 text-sm">Active Campaign</p>
                </div>
              </div>
              <div class="space-y-2">
                <div class="h-2 bg-purple-100 rounded-full overflow-hidden">
                  <div class="w-3/4 h-full bg-purple-600"></div>
                </div>
                <div class="flex justify-between text-sm">
                  <span class="text-gray-600">15,234 Entries</span>
                  <span class="text-purple-600 font-medium">75% Complete</span>
                </div>
              </div>
            </div>

            <!-- Analytics Card -->
            <div class="bg-white rounded-lg p-4 shadow-lg transform hover:scale-105 transition-transform duration-200">
              <div class="flex justify-between items-center mb-4">
                <h3 class="text-gray-900 font-semibold">Campaign Analytics</h3>
                <span class="text-green-500">↑ 24%</span>
              </div>
              <div class="relative h-20">
                <div class="absolute bottom-0 left-0 right-0 flex items-end justify-between h-16">
                  {[40, 70, 45, 90, 65, 85].map(height => (
                    <div class="w-8 bg-purple-600 rounded-t" style={`height: ${height}%`}></div>
                  ))}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .bg-grid-white {
    mask-image: linear-gradient(to bottom, transparent, black, transparent);
  }
</style>
