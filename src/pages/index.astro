---
import Layout from '../layouts/Layout.astro';
import Welcome from '../components/Welcome.astro';
import Features from '../components/Features.astro';
import Benefits from '../components/Benefits.astro';
import CTAGrowth from '../components/CTAGrowth.astro';
import Testimonials from '../components/Testimonials.astro';
import FAQ from '../components/FAQ.astro';
import MissingContent from '../components/MissingContent.astro';
import Header from '../components/Header.astro';
---

<Layout 
  title="ViralSweep - Create Viral Marketing Campaigns"
  description="Create viral contests, sweepstakes, and giveaways that drive massive engagement. Build your email list, boost social follows, and generate sales on autopilot."
>
  <Header />
  <main class="pt-16"> 
    <Welcome />
    <section id="features">
      <Features />
    </section>
    <section id="case-studies">
      <Benefits />
    </section>
    <CTAGrowth />
    <section id="testimonials">
      <Testimonials />
    </section>
    <section id="pricing">
      <MissingContent />
    </section>
    <section id="faq">
      <FAQ />
    </section>
  </main>
</Layout>
